<div class="mdl-grid"> 
    <div class="mdl-cell mdl-cell--3-col body-diagram-block mdl-shadow--2dp plain-background">
        <div class="card-header-color mdl-color-text--grey-600 mdl-shadow--2dp mdl-card__title" >    
            <h4>Body Diagram</h4>
            <div class="mdl-layout-spacer"></div>      
            <%= image_tag "body.png", class: "custom-font-icon", height: '35px' %>                  
        </div>
        <div class="mdl-card__supporting-text">
            <p style="float:right;">Click on a part to see a list of symptoms.</p>      
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--12">
                    <div id="symptomSelector"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- _symptoms_list -->
    <div class="mdl-cell mdl-cell--3-col mdl-shadow--2dp body-background">
        <div class="card-header-color mdl-color-text--grey-600 mdl-shadow--2dp mdl-card__title" id="selectSymptomsTitle">
            <h4>Symptoms</h4>
            <div class="mdl-layout-spacer"></div>
            <%= image_tag "broken-bone.png", class: "custom-font-icon", height: '30px' %>   
        </div>
        <div class="mdl-card__supporting-text">    
            <p >Click on a symptom to view a list of ailments.</p>
        </div>
        <div id="diagram_results_symptoms" class="mdl-card__actions mdl-card--border" >
            <div id="symptomList"></div>
        </div>
    </div>
    <!-- selected_symptoms_list -->
    <div class="mdl-cell mdl-cell--3-col mdl-shadow--2dp body-background">
        <div class="card-header-color mdl-color-text--grey-600 mdl-shadow--2dp mdl-card__title" > <!--id="selectedSymptomsTitle"-->
            <h4>Selected Symptoms</h4>
            <div class="mdl-layout-spacer"></div>
            <%= image_tag "broken-bone.png", class: "custom-font-icon", height: '30px' %>   
        </div>
        <div class="mdl-card__supporting-text">    
            <p>You can add further conditions. Please select one/multiple medical condition(s) by clicking the appropriate body part on the picture.</p>
        </div>
        <div id="diagram_results_symptoms" class="mdl-card__actions mdl-card--border" >
            <div id="selectedSymptomList"></div>
        </div>
    </div>
    <!-- _ailments_list (diseases) -->
    <div class="mdl-cell mdl-cell--3-col mdl-shadow--2dp body-background-offset-right">
        <div class="card-header-color mdl-color-text--grey-600 mdl-shadow--2dp mdl-card__title" > <!--id="possibleDiseasesTitle"-->
            <h4>Possible Ailments</h4>
            <div class="mdl-layout-spacer"></div>      
            <%= image_tag "sneeze.png", class: "custom-font-icon", height: '30px' %>      
        </div>
        <div class="mdl-card__supporting-text">
            <p>Click on an ailment to view more information.</p>
        </div>
        <div id="diagram_results_ailments" class="mdl-card__actions mdl-card--border">
            <div id="diagnosisList"></div>
        </div>
    </div>
</div>

<script type="text/javascript">

    var userToken = 'eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..v0kW3UjM03RW65j4MKr5nfjN6iqmwNgzBRs7VYh_Uww';
    
    $(document).ready(function () {
        $("#symptomSelector").symptomSelector(
        {
            mode: "diagnosis",
            webservice: "https://healthservice.priaid.ch",
            language: "en-gb",
            specUrl: "resources",
            accessToken: userToken
        });
    });
</script>
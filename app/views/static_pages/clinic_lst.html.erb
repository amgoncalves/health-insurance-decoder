<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col card-header-color mdl-color-text--grey-600 mdl-shadow--2dp mdl-card__title">
    <i class="material-icons" role="presentation">room</i>    
    <h4>Nearby Clinics</h4>
  </div>

  <div class = "mdl-cell mdl-cell--8-col" >
    <div id="sidebar_builder" style='width: 100%; height: 400px;'></div>
  </div>


  <div class = "mdl-cell mdl-cell--4-col" id='sidebar' style= "background-color: aliceblue;">
    <div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
      <div class="mdl-tabs__tab-bar">
        <a href="#urgent" class="mdl-tabs__tab is-active" onclick="switchContent(event, 'urgent')" id="defaultOpen2">Urgent Care</a>
        <a href="#non-urgent" class="mdl-tabs__tab" onclick="switchContent(event, 'non-urgent')">Non-Urgent Care</a>
      </div>


      <div id="urgent" class="mdl-tabs__panel is-active">
        <h4>URGENT CARE AND WALK-IN CENTERS</h4>
        <p style="color: red">Urgent care is for non-life threatening urgent health needs such as x-rays, IV hydration, or stitches</p>
      </div>

      <div id="non-urgent" class="mdl-tabs__panel">
        <h4>NON-URGENT CARE</h4>
        <p style="color: red">For minor illness and injury assessment, labwork and tests.</p>
      </div>
      
    </div>
    
    <div id="sidebar_container"></div></br>
    
  </div>
  
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="//maps.google.com/maps/api/js?key=AIzaSyDvdo40ahNe-E3uMpVoTl_-sfPHKeOYpV4"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<%= javascript_include_tag 'clinic_lst' %>

<script>
  $(document).ready(function(){
    document.getElementById("defaultOpen2").click();
  });
</script>

<style>
  /* Style the tab */
  div.tab {
      overflow: hidden;
      background-color: #ffffff;
  }

  /* Style the buttons inside the tab */
  div.tab button {

      background-color: #f1f1f1;
      float: left;
      border: none;
      outline: none;
      cursor: pointer;
      padding: 8px 12%;
      transition: 0.3s;
  }

  /* Change background color of buttons on hover */
  div.tab button:hover {
      background-color: #99ccff;
  }

  /* Create an active/current tablink class */
  div.tab button.active {
      color: white;
      
      background-color: #548abe;
  }

  /* Style the tab content */
  .tabcontent2 {
      display: none;
      padding: 10px 10px;
      background-color: aliceblue;
  }

  .tabcontent2 {
    -webkit-animation: fadeEffect 1s;
    animation: fadeEffect 1s; /* Fading effect takes 1 second */
  }

  @-webkit-keyframes fadeEffect {
      from {opacity: 0;}
      to {opacity: 1;}
  }

  @keyframes fadeEffect {
      from {opacity: 0;}
      to {opacity: 1;}
  }
</style>


<!-- Submit form for new symptom log -->
<%= form_for(@log) do |f| %>


    <div class="mdl-selectfield mdl-js-selectfield mdl-selectfield--floating-label">
        <select class="mdl-selectfield__select" id="sym-filter" name="symptom_id">
            <option value=''></option>
            <% @symptoms.each do |sym| %>    
                <option value= <%= sym.id %>> <%= sym.name.capitalize %></option>
            <% end %>
        </select>
        <label class="mdl-selectfield__label" for="sym-filter">Symptom</label>
    </div><br/>


    <!-- Severity slide ruler -->
    <%= f.label :severity %> <span id="score">5</span>
    <input class="mdl-slider mdl-js-slider" type="range" min="0" max="10" value="5" tabindex="0" id="slider1" name="log[severity]">

    <!-- Submit button -->
    <%= submit_tag "Save", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>

<% end %>



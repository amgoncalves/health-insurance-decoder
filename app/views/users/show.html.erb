
<% provide(:title, @user.name) %>
<div class="row">
  <button type="button" class="btn btn-default"><%= link_to 'Back', users_path %></button>
  </br>
</div>

</br></br>
<div class="row">

      <div class = "col-md-4">
        <%= image_tag @user.picture.url if @user.picture? %>
      </div>
      <div class = "col-md-3">
      </div>
      <div class = "col-md-5">
        <h4>
          <strong><%= @user.name %></strong>
          <p><%= @user.email %></p>

          <p><strong>Plans:</strong></p>
          <p><%@user.plans.all.each do |plan|%>
             <p>Name:
             <%= plan.name %>
             <%=link_to 'Show', plan_path(plan)%></p>
          <%end%></p>
          <p><%= link_to 'Create New Plan', new_plan_path%>
          <p><%= link_to 'Edit', edit_user_path(@user) %> |
          <%= link_to 'Delete', @user, method: :delete, data: { confirm: "You sure?" } %></p>

          <%= form_for(@user) do |f| %>
          <span class="picture">
            <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
          </span>
          <%= f.submit "Done", class: "btn btn-primary btn-block" %>
          <% end %>
        </h4>
      </div>
</div>


<p id="notice"><%= notice %></p>

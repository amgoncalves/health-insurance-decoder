<div class="row">
  <div class = "class profile">
    <div>
      <section class="large-title" >
	<h1>Health Decoder</h1>
      </section>
    </div>

    <div class="col-lg-12">
      <% if logged_in? %>
      <div class="alert alert-success">You are logged in as <strong><%= current_user.name%></strong>.</div>
	<br />
	<br />

        <div id="welcome-buttons">
          <%= link_to "Log out", logout_path, method: :delete, class: "btn btn-success btn-block" %>

      <% else %>
        <div class="alert alert-danger">
	  Please <strong>sign in </strong>to view more.
	</div>
	<div id="welcome-buttons">
	  <%= link_to "Sign in", login_path, class: "btn btn-primary btn-block" %>
	  <p class="text-primary">New user? <%= link_to "Sign up now!", signup_path %></p>
      <% end %>
      <%= link_to "Quick Diagnosis", body_diagram_path, class: "btn btn-danger btn-block" %>
    </div>
  </div>
</div>

<% if logged_in? %>
   <div class="row">
      <div class="col-sm-4 sidenav">
        <h4>Your Log</h4>
        <ul class="nav nav-pills nav-stacked">
          <li class="active"><a href="#section1">Timeline</a></li>
          <li><a href="#section2">Symptoms</a></li>
          <li><a href="#section3">Reminders</a></li>
          <li><a href="#section3">Create New Log</a></li>
        </ul><br>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search Log..">
          <span class="input-group-btn">
            <button class="btn btn-default" type="button">
              <span class="glyphicon glyphicon-search"></span>
            </button>
          </span>
        </div>
        <div calss="calendar">

          <%= month_calendar do |date| %>
            <%= date.day %>
          <% end %>
          
        </div>
      </div>
      <div class="col-sm-8">
        <%= render "table" %>
        <%= render "new" %>
      </div>
  </div>
<% else %>
  <div class="alert alert-danger">Please <strong>sign in </strong>to view more.</div>
  <%= link_to "Sign in", login_path, class: "btn btn-primary btn-block" %>
  <center><p class="text-primary">New user? <%= link_to "Sign up now!", signup_path %></p></center>
<% end %>

</br>
<%= javascript_include_tag 'slider'%>

<script>
  $('.selectpicker').selectpicker('refresh');
</script>

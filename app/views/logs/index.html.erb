<div class="row">
  <% if logged_in? %>
 <!-- Logs sidebar with search -->
    <div class="col-sm-4 sidenav">
      <div>
        <%= form_tag(logs_path, method: "get") do %>
          <div class="input-group">
            <%= text_field_tag(:symptom_name,'', class:'form-control') %>
            <span class="input-group-btn">
              <%= button_tag( :class => "btn btn-default") do %>
                <span class='glyphicon glyphicon-search'></span>
              <% end %>
            </span>
          </div>
        <% end %>
        
        <!-- Logs display table -->
        <h3>Log History</h3>
        <div calss="log_table">
          <%= render "table" %>
        </div>  
      </div>

      <div class = "visits">
        <h3> Visits </h3>

        <% if not @visits.nil? %>
          <% @visits.order(:time).each do |v| %>
            <strong><td>  <%= v.vtype %> </td>
            <td>  <%= v.time %> </td></strong>
            <td><%= link_to image_tag('cross.png', size: 10), v, method: :delete%></td></br>
            <div class = "visit_log" style="margin-left: 40px">  
              <% if not v.logs.nil? %>
                <% v.logs.each do |l| %> 
                  <!-- <%= Symptom.find(l.symptom_id).name %>-->
                  <td><%= link_to Symptom.find(l.symptom_id).name, edit_log_path(l) %></td>
                  <td><%= l.severity %></td>
                  <td><%= l.created_at.to_date %></td>
                  <td>
                    <%= link_to image_tag('cross.png', size: 10), l, method: :delete%>
                  </td></br>
                <% end %>
              <% end %>
            </div>
          <% end %>
        <% end %>
        <%= render "visits_add" %>
      </div>
    </div>
    <!-- /logs sidebar -->
    <!-- Calendar table -->
    <div class="col-sm-8">
      <%= render "calendar" %>
      <%= render "new" %>
    </div><!-- /calendar -->
  </div> <!-- /row -->
<% else %>
  <div class="alert alert-danger">You need to <strong>sign in</strong> to view your log history.</div>
    <%= link_to "Sign in", login_path, class: "btn btn-primary btn-block" %>
  <center>
    <p class="text-primary">New user? <%= link_to "Sign up now!", signup_path %></p>
  </center>
<% end %>

<%= javascript_include_tag 'slider'%>

<script>
  // $('.selectpicker').selectpicker('refresh');
  $(document).on('turbolinks:load', function () {
    $('.selectpicker').each(function (i, el) {
      if (!$(el).parent().hasClass('bootstrap-select')) {
        $(el).selectpicker('refresh');
      }
    });
  });
</script>

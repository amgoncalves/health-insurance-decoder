<% if logged_in? %>
   <div class="row">
      <div class="col-sm-4 sidenav">
        <div>
            <%= form_tag(logs_path, method: "get") do %>
              <div class="input-group">
                <%= text_field_tag(:symptom_name,'', class:'form-control') %>
                <span class="input-group-btn">
                  <%= button_tag( :class => "btn btn-default") do %>
                   <span class='glyphicon glyphicon-search'></span>
                  <% end %>
                </span>
              </div>

        </div>

<% end %>

        <div calss="calendar">
          <%= render "table" %>
        </div>

      </div>
      <div class="col-sm-8">
        <%= month_calendar do |date| %>
            <%= date.day %>
          <% end %>
        <%= render "new" %>
      </div>
  </div>
<% else %>
  <div class="alert alert-danger">Please <strong>sign in </strong>to view more.</div>
  <%= link_to "Sign in", login_path, class: "btn btn-primary btn-block" %>
  <center><p class="text-primary">New user? <%= link_to "Sign up now!", signup_path %></p></center>
<% end %>

</br>
<%= javascript_include_tag 'slider'%>

<script>
  $('.selectpicker').selectpicker('refresh');
</script>

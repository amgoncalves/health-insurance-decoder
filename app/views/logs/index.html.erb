<% if logged_in? %>
   <div class="row">
      <div class="col-sm-3 sidenav">
        <h4>Your Log</h4>
        <ul class="nav nav-pills nav-stacked">
          <li class="active"><a href="#section1">Timeline</a></li>
          <li><a href="#section2">Symptoms</a></li>
          <li><a href="#section3">Reminders</a></li>
          <li><a href="#section3">Create New Log</a></li>
        </ul><br>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search Log..">
          <span class="input-group-btn">
            <button class="btn btn-default" type="button">
              <span class="glyphicon glyphicon-search"></span>
            </button>
          </span>
        </div>
        <div calss="calendar">
          <%= month_calendar do |date| %>
            <%= date.day %>
          <% end %>
        </div>
      </div>
      <div class="col-sm-9">
        <table class = "table table-striped">
          <thead>
            <tr>
              <th>Symptom</th>
              <th>Severity</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @logs.each do |log| %>
              <tr>
                <td><%= Symptom.find(log.symptom_id).name %></td>
                <td><%= log.severity %></td>
                <td><%= link_to 'Edit', edit_log_path(log) %></td>
                <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="container" style="background-color:aliceblue">
          <h3 style="color:lightblue"> New Log </h3>
          <%= form_for(@log) do |f| %>
            <%= f.label :symptom_id %>
            <select class="selectpicker" title="Please select your symptom..." id="sym-filter" name="symptom_id" data-live-search="true">
                <% @symptoms.each do |sym| %>
                    <option value= <%= sym.id %>> <%= sym.name %></option>
                <% end %>
            </select></br>
            <%= f.label :severity %>
            <span id="score" style="color:red; font-size: 16pt">5</span>
            <%= f.range_field :severity, :min=>0, :max=>10, :class=>"slide", :id=>"slider1", style: "width :30%"%>  
              <%= submit_tag "Record Log", class: "btn btn-large btn-primary" %>
          <% end %>
        </div>
      </div>
  </div>
<% else %>
  <div class="alert alert-danger">Please <strong>sign in </strong>to view more.</div>
  <center><button type="button" class="btn btn-primary btn-block"><%= link_to "Sign in", login_path %></button></center>
  <center><p class="text-primary">New user? <%= link_to "Sign up now!", signup_path %></p></center>
<% end %>

</br>
<script>
  $("#slider1").change(function () {           
     var newValue = $('#slider1').val();
     $("#score").html(newValue);
  });
</script>

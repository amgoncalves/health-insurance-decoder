<% if logged_in? %>
  <div class="row">
  
    <!-- Logs sidebar with search -->
    <div class="col-sm-4 sidenav">

      <!-- Logs search form -->
      <div>
	<%= form_tag logs_path, method: "get" do %>
          <div>
	    <%= text_field_tag :symptom_name %>
          </div>
            <%= submit_tag("Search") %>
        <% end %>
      </div>

      <!-- Logs display table -->
      <div calss="calendar">
        <%= render "table" %>
      </div>
      
    </div><!-- /logs sidebar -->

    <!-- Calendar table -->
    <div class="col-sm-8">
      <%= month_calendar do |date| %>
        <%= date.day %>
      <% end %>
      <%= render "new" %>
    </div><!-- /calendar -->
    
  </div> <!-- /row -->
<% else %>
  <div class="alert alert-danger">Please <strong>sign in</strong> to view more.</div>
  <%= link_to "Sign in", login_path, class: "btn btn-primary btn-block" %>
  <center>
    <p class="text-primary">New user? <%= link_to "Sign up now!", signup_path %></p>
  </center>
<% end %>

<%= javascript_include_tag 'slider'%>

<script>
  $('.selectpicker').selectpicker('refresh');
</script>

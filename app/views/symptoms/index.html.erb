<p id="notice"><%= notice %></p>

<h1>Symptoms</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Frequency</th>
      <th>Body Parts</th>
      <th>Diseases</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @symptoms.each do |symptom| %>
    <tr>
        <td><%= symptom.id %></td>
        <td><%= symptom.name %></td>
        <td><%= symptom.frequency %></td>
	<td>
          <%= symptom.body_parts.each do |body_part| %>
	    <p><%= body_part.name %></p>
	  <% end %>
	</td>
	<td>
          <%= symptom.diseases.each do |disease| %>
	    <p><%= disease.name %></p>
	  <% end %>
	</td>	
        <td><%= link_to 'Show', symptom %></td>
        <td><%= link_to 'Edit', edit_symptom_path(symptom) %></td>
        <td><%= link_to 'Destroy', symptom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

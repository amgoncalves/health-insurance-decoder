<p id="notice"><%= notice %></p>

<h1>Body Parts</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Symptoms</th>
      <th>Diseases</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @body_parts.each do |body_part| %>
    <tr>
        <td><%= body_part.id %></td>
        <td><%= body_part.name %></td>
	<td>
	  <%= body_part.diseases.each do |disease| %>
	    <p><%= disease.name %></p>
	  <% end %>
	</td>
	<td>
          <%= body_part.symptoms.each do |symptom| %>
	    <p><%= symptom.name %></p>
	  <% end %>
	</td>
        <td><%= link_to 'Show', body_part %></td>
        <td><%= link_to 'Edit', edit_body_part_path(body_part) %></td>
        <td><%= link_to 'Destroy', body_part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

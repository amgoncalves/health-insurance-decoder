<div class="row">
  <div class="col-lg-6">
    <h1>Body Diagram</h1>

    <p>Click on a body part to see a list of symptoms.</p>

    <div id="body-image">
      <%= image_tag("female.png", alt: "Click on a body part to be diagnosed") %>
    </div>

    <div id="body-image-switches">
      <!-- Unicode characters for Male, Intersex, Female: &#9794;  &#9893;  &#9792;-->
      <%= link_to "Male", '#', class: "btn btn-md btn-primary" %>
      <%= link_to "Intersex", '#', class: "btn btn-md btn-primary" %>
      <%= link_to "Female", '#', class: "btn btn-md btn-primary disabled" %>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="body-labels">
      <table>
	<tbody>
	  <% @body_parts.each do |body_part| %>
	  <tr>
            <td><%= link_to body_part.name, '#' %></td>
	  </tr>
	  <% end %>
	</tbody>
      </table>
    </div>
  </div>
</div>
